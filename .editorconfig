# http://editorconfig.org
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files (README.md)
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2

# The following is optional but good for web projects
[*.{html,js,css}]
indent_size = 4